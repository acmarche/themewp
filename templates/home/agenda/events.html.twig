<div class="pt-55px px-0 col-md-4 d-md-flex flex-md-column pt-md-0 px-md-15px pt-ls-md-0 col-ls-md-4 d-ls-md-flex flex-ls-md-column px-xl-30px mw-md-544px">
    <div class="p-ls-md-8px ls-md-shadow-sm-1 p-md-8px md-shadow-sm-1">
        <h2 class="text-ls-md-left text-md-left">Agenda</h2>
        <ul class="pt-24px pt-ls-md-32px d-ls-sm-flex mx-ls-sm-n4px flex-ls-md-column pt-md-32px flex-md-column">

            <!--always visible-->
            {% for event in events %}
                {% if loop.index == 1 %}
                    {% include 'home/agenda/_events_list_always.html.twig' %}
                {% endif %}
            {% endfor %}

            <!--visible from landscape&&small-->
            {% for event in events %}
                {% if loop.index == 1 or loop.index == 2 or loop.index == 3 %}
                    {% include 'home/agenda/_events_list_small.html.twig' %}
                {% endif %}
            {% endfor %}

            <!--visible from landscape&&medium / medium-->
            {% for event in events %}
                {% if loop.index == 4 %}
                    {% include 'home/agenda/_events_list_medium.html.twig' %}
                {% endif %}
            {% endfor %}

            <!--visible from landscape&&large / large-->
            {% for event in events %}
                {% if loop.index == 3 %}
                    {% include 'home/agenda/_events_list_large.html.twig' %}
                {% endif %}
            {% endfor %}

        </ul>
    </div>

    <a href="/tourisme/agenda-des-manifestations"
       class="button lvl3 mt-12px align-self-ls-md-end align-self-md-end position-relative left-0 left-hover-12px">Tout
        l'agenda<i class="fas fa-angle-right d-none d-ls-md-inline pl-12px fs-basic d-md-inline"></i></a>
</div>
