        <ul class="pt-24px pt-ls-md-32px d-ls-sm-flex mx-ls-sm-n4px flex-ls-md-column pt-md-32px flex-md-column">
            {% if events|length > 0 %}
                <!--always visible-->
                {% include 'homepage/agenda/_always.html.twig' %}

                <!--visible from landscape&&small-->
