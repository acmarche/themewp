{% if latitude and longitude %}

    <div id='openmap' style='width: 100%; height: 400px;'></div>

    <script type="text/javascript">
        var latitude = '{{ latitude }}';
        var longitude = '{{ longitude }}';
        var center = [latitude, longitude];
        var map = L.map('openmap').setView(center, 15);
        var nom = '{{ title }}';

        L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
            // Il est toujours bien de laisser le lien vers la source des donn√©es
            attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors',
            minZoom: 1,
            maxZoom: 20
        }).addTo(map);

        L.marker(center, {title: nom, draggable: true}).addTo(map);

    </script>

{% endif %}
