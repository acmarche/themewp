        <!--category-->
        <span class="color-cat-cit ff-semibold pt-12px d-block fs-short-2">Citoyen</span>

        <!--article-->
        <div class="pt-48px d-lg-flex mx-n15px">
            <div class="d-flex flex-column align-items-center mx-md-n15px flex-md-wrap flex-md-row align-items-md-start flex-lg-column col-lg-8 mx-lg-0 flex-lg-nowrap">
                <!--img-->
                {% include 'article/_image.html.twig' %}

                <!--OBJECT | TAGS-->
                {% include 'article/_tags.html.twig' %}

                <!--OBJECT | TEXT-DYN | TODO JF : brancher la possibilité d'ouvrir/réduire le content avec un ellipsis + condition sur l'extend-->
                {% include 'article/_content.html.twig' %}

                <!--OBJECT | SHARE-->
                {% include 'article/_share.html.twig' %}

                <!--previous/next-->
                {% include 'article/_previous-next.html.twig' %}

                <!--OBJECT | RECOM-->
                {% include 'article/_recommandation.html.twig' %}
