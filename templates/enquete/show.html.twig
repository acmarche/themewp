{% extends "article/base.html.twig" %}

{% block url_back %}
    {{ urlBack }}
{% endblock %}

{% block name_back %}
    Retour Ã  {{ nameBack|puriferHtml|raw }}
{% endblock %}

{% block content %}

    <h4 class="mt-3"><strong>Demandeur</strong></h4>

    {{ enquete.demandeur }}

    <p>
        {{ enquete.categorie }}
    </p>
    <h4>Dates d'affichage</h4>
    <p>
        Du {{ enquete.date_debut | date('d-m-Y') }}
        au {{ enquete.date_fin | date('d-m-Y') }}
    </p>

    <h4><strong>Adresse</strong></h4>
    <p>
        {{ enquete.rue }}
        {{ enquete.numero }} <br/>
        {{ enquete.code_postal }}
        {{ enquete.localite }}
    </p>

    {{ enquete.description|raw }}

    <p>
        <a href="{{ enquete.avis }}">Consulter l'avis</a>
    </p>

    {% include 'map/_carte.html.twig' %}
{% endblock %}

{% block scripts %}

    <script type="text/javascript">
        jQuery( document )
            .ready( function() {
                jQuery( '#content' )
                    .lightGallery( {
                            'selector': '.img-lightGallery'
                        }
                    );
            } );
    </script>

{% endblock %}
