            <!--TODO JF: placer la limite de caractère pour l'ellipsis-->
            <!--hide from landscape / medium-->
            <!-- todo 3 points -->
            <h3 class="d-ls-none d-md-none" maxlenght="0">{{ actu.post_title }}</h3>

            <!--visible from landscape / medium-->
