<a href="{{ event.url }}" class="bg-img">
    {% include 'agenda/_image.html.twig' %}
    <div>
        <!--date-->
        <div class="col-3">
            <span>{{ event.day }}</span>
            <span>{{ event.month }}</span>
            <span>{{ event.year }}</span>
        </div>

        <!--other datas-->
        <div class="col-9">

            <!--TODO JF: placer la limite de caractère pour l'ellipsis-->
            <h3 maxlenght="0">{{ event.nom }}</h3>

            <small>{{ event.localite }}</small>

            <!--TODO JF: condition si événement sur plusieurs jours/mois/années/décénnies/...-->
            <small {% if date_affichage == false %}class="d-none"{% endif%} >{{ event.dateRange }}</small>
        </div>
    </div>
</a>
