<!--event-2-->
<li class="object-card oc-event pt-8px pt-md-0 col-md-6 px-md-4px col-lg-4 px-lg-8px">
    <a href="{{ post.url }}" class="bg-img">
        <i class="bg-img-event-2 bg-img-size-hover-110">
            <b class="d-block position-absolute top-0 bottom-0 left-0 right-0 bg-img-bgcolor-primary-0 bg-img-bgcolor-hover-primary-55 bg-img-transition-bgcolor"></b>
            <span class="text-white shadow-text-sm m-auto bg-img-opacity-0 bg-img-opacity-hover-1 transition-opacity d-block align-self-center z-10 ff-semibold fs-short-2">Voir l'événement</span>
        </i>
        <div>

            <!--date-->
            <div class="col-3">
                <span>{{ post.day }}</span>
                <span>{{ post.month }}</span>
                <span>{{ post.year }}</span>
            </div>

            <!--other datas-->
            <div class="col-9">

                <!--TODO JF: placer la limite de caractère pour l'ellipsis-->
                <h3 maxlenght="0">{{ post.post_title }}</h3>

                <small>{{ post.localite }}</small>

                <!--TODO JF: condition si événement sur plusieurs jours/mois/années/décénnies/...-->
                <small class="d-none">{{ post.date_affichage }}</small>
            </div>
        </div>
    </a>
</li>
